{
	"info": {
		"name": "WhatsApp Web API",
		"description": "Complete API collection for WhatsApp Web automation",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/api",
			"type": "string"
		},
		{
			"key": "sessionId",
			"value": "user123",
			"type": "string"
		},
		{
			"key": "chatId",
			"value": "628123456789@c.us",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Session Management",
			"item": [
				{
					"name": "Start Session",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"options\": {}\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/session/start",
							"host": ["{{baseUrl}}"],
							"path": ["session", "start"]
						}
					}
				},
				{
					"name": "Get QR Code",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/session/qr/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["session", "qr", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "Get QR Code Image",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/session/qr/{{sessionId}}/image",
							"host": ["{{baseUrl}}"],
							"path": ["session", "qr", "{{sessionId}}", "image"]
						}
					}
				},
				{
					"name": "Check Session Status",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/session/status/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["session", "status", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "List All Sessions",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/session/list",
							"host": ["{{baseUrl}}"],
							"path": ["session", "list"]
						}
					}
				},
				{
					"name": "Get Session Info",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/session/info/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["session", "info", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "Logout Session",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/session/logout/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["session", "logout", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "Stop Session",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/session/stop/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["session", "stop", "{{sessionId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Messaging",
			"item": [
				{
					"name": "Send Text Message",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\",\n  \"message\": \"Hello from API!\",\n  \"options\": {}\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/send",
							"host": ["{{baseUrl}}"],
							"path": ["message", "send"]
						}
					}
				},
				{
					"name": "Send Media (File Upload)",
					"request": {
						"method": "POST",
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "sessionId",
									"value": "{{sessionId}}",
									"type": "text"
								},
								{ "key": "chatId", "value": "{{chatId}}", "type": "text" },
								{ "key": "file", "type": "file", "src": "" },
								{ "key": "caption", "value": "Check this out!", "type": "text" }
							]
						},
						"url": {
							"raw": "{{baseUrl}}/message/send-media",
							"host": ["{{baseUrl}}"],
							"path": ["message", "send-media"]
						}
					}
				},
				{
					"name": "Send Media (URL)",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\",\n  \"mediaUrl\": \"https://example.com/image.jpg\",\n  \"caption\": \"Image from URL\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/send-media",
							"host": ["{{baseUrl}}"],
							"path": ["message", "send-media"]
						}
					}
				},
				{
					"name": "Send Location",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\",\n  \"latitude\": -6.2088,\n  \"longitude\": 106.8456,\n  \"description\": \"Jakarta, Indonesia\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/send-location",
							"host": ["{{baseUrl}}"],
							"path": ["message", "send-location"]
						}
					}
				},
				{
					"name": "Send Poll",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\",\n  \"pollName\": \"What's your favorite color?\",\n  \"pollOptions\": [\"Red\", \"Blue\", \"Green\", \"Yellow\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/send-poll",
							"host": ["{{baseUrl}}"],
							"path": ["message", "send-poll"]
						}
					}
				},
				{
					"name": "Broadcast Message",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatIds\": [\"628123456789@c.us\", \"628987654321@c.us\"],\n  \"message\": \"Broadcast message\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/broadcast",
							"host": ["{{baseUrl}}"],
							"path": ["message", "broadcast"]
						}
					}
				},
				{
					"name": "React to Message",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"messageId\": \"message_id_here\",\n  \"reaction\": \"üëç\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/react",
							"host": ["{{baseUrl}}"],
							"path": ["message", "react"]
						}
					}
				},
				{
					"name": "Mark Chat as Seen",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/message/mark-seen",
							"host": ["{{baseUrl}}"],
							"path": ["message", "mark-seen"]
						}
					}
				}
			]
		},
		{
			"name": "Contacts",
			"item": [
				{
					"name": "Get All Contacts",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/contact/list/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["contact", "list", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "Get Contact by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/contact/get/{{sessionId}}/{{chatId}}",
							"host": ["{{baseUrl}}"],
							"path": ["contact", "get", "{{sessionId}}", "{{chatId}}"]
						}
					}
				},
				{
					"name": "Get Profile Picture",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/contact/profile-pic/{{sessionId}}/{{chatId}}",
							"host": ["{{baseUrl}}"],
							"path": ["contact", "profile-pic", "{{sessionId}}", "{{chatId}}"]
						}
					}
				},
				{
					"name": "Block Contact",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"contactId\": \"{{chatId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/contact/block",
							"host": ["{{baseUrl}}"],
							"path": ["contact", "block"]
						}
					}
				},
				{
					"name": "Check Number Exists",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/contact/number-exists/{{sessionId}}/628123456789",
							"host": ["{{baseUrl}}"],
							"path": [
								"contact",
								"number-exists",
								"{{sessionId}}",
								"628123456789"
							]
						}
					}
				}
			]
		},
		{
			"name": "Chats",
			"item": [
				{
					"name": "Get All Chats",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/chat/list/{{sessionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["chat", "list", "{{sessionId}}"]
						}
					}
				},
				{
					"name": "Get Chat Messages",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/chat/messages/{{sessionId}}/{{chatId}}?limit=50",
							"host": ["{{baseUrl}}"],
							"path": ["chat", "messages", "{{sessionId}}", "{{chatId}}"],
							"query": [{ "key": "limit", "value": "50" }]
						}
					}
				},
				{
					"name": "Archive Chat",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/chat/archive",
							"host": ["{{baseUrl}}"],
							"path": ["chat", "archive"]
						}
					}
				},
				{
					"name": "Pin Chat",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/chat/pin",
							"host": ["{{baseUrl}}"],
							"path": ["chat", "pin"]
						}
					}
				},
				{
					"name": "Mute Chat",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"chatId\": \"{{chatId}}\",\n  \"unmuteDate\": 1734567890\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/chat/mute",
							"host": ["{{baseUrl}}"],
							"path": ["chat", "mute"]
						}
					}
				}
			]
		},
		{
			"name": "Groups",
			"item": [
				{
					"name": "Create Group",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"name\": \"My New Group\",\n  \"participants\": [\"628123456789@c.us\", \"628987654321@c.us\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/group/create",
							"host": ["{{baseUrl}}"],
							"path": ["group", "create"]
						}
					}
				},
				{
					"name": "Get Group Info",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/group/info/{{sessionId}}/group_id@g.us",
							"host": ["{{baseUrl}}"],
							"path": ["group", "info", "{{sessionId}}", "group_id@g.us"]
						}
					}
				},
				{
					"name": "Add Participants",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"groupId\": \"group_id@g.us\",\n  \"participants\": [\"628111222333@c.us\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/group/add-participants",
							"host": ["{{baseUrl}}"],
							"path": ["group", "add-participants"]
						}
					}
				},
				{
					"name": "Get Invite Code",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/group/invite-code/{{sessionId}}/group_id@g.us",
							"host": ["{{baseUrl}}"],
							"path": ["group", "invite-code", "{{sessionId}}", "group_id@g.us"]
						}
					}
				},
				{
					"name": "Join Group by Code",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"inviteCode\": \"ABC123DEF456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/group/join-by-code",
							"host": ["{{baseUrl}}"],
							"path": ["group", "join-by-code"]
						}
					}
				}
			]
		},
		{
			"name": "Status",
			"item": [
				{
					"name": "Set Status",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"status\": \"Available\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/status/set",
							"host": ["{{baseUrl}}"],
							"path": ["status", "set"]
						}
					}
				},
				{
					"name": "Post Text Status",
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"text\": \"This is my status update!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/status/text",
							"host": ["{{baseUrl}}"],
							"path": ["status", "text"]
						}
					}
				}
			]
		}
	]
}
